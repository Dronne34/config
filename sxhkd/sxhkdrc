# Ranger
ctrl + alt + r 
    st -n "ranger" -f "Hack:style=Regular:size=11" -e ranger  
     
# Keybind-dwm
ctrl + alt + o
     st -n key  -e bat -l perl ~/.config/keybind/dwm-key


