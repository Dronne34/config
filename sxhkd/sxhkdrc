
#My custom key
#------------------------------------------


XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +5% &&  dunstify  -r 3456 -t 700 -i audio-volume-high "volume: $(pamixer --get-volume)%" | canberra-gtk-play -i audio-volume-change -d "changeVolume" 


XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -5% &&  dunstify  -r 3456 -t 700 -i audio-volume-medium "volume: $(pamixer --get-volume)%" | canberra-gtk-play -i audio-volume-change -d "changeVolume"


XF86AudioMute
   pactl set-sink-mute @DEFAULT_SINK@ toggle &&  dunstify  -r 3456 -t 700 -i audio-volume-muted "mute: $(pamixer --get-mute)" | canberra-gtk-play -i audio-volume-change -d "changeVolume"


XF86AudioMicMute
   pactl set-source-mute @DEFAULT_SOURCE@ toggle &&  dunstify  -r 3456 -t 700 -i audio-volume-muted "mute: $(pamixer --get-mute)" | canberra-gtk-play -i audio-volume-change -d "changeVolume"

#MPC-PLAYER 
#ctrl + alt + Right
XF86AudioNext
    mpc --host=localhost --port=6500 next
    

#ctrl + alt + Left
XF86AudioPrev
    mpc --host=localhost --port=6500 prev

#ctrl + alt + Up
XF86AudioPlay 
    mpc --host=localhost --port=6500 toggle  

#ctrl + alt + Down
#    mpc --host=localhost --port=6500 play   

#Conky
ctrl + alt + c
    killall conky   


#sxhkd reload
ctrl + alt + Escape
    pkill -USR1 -x sxhkd

#Xterm
ctrl + alt + x 
   xterm -bw 0 

#picom-trans transparency
super + alt + bracketleft
    picom-trans -c -10

super + alt + bracketright
    picom-trans -c +10
    
#system-monitor    
super + ctrl + m
    gnome-system-monitor

#Browser    
super + alt + b
    brave --disable-features=ExtensionsToolbarMenu

#Locker   
super + ctrl + l
    sh ~/.config/i3/scripts/lock
    
#Polybar 
ctrl + alt + Delete
   killall polybar


#Polybar-reload
ctrl + alt + r
    sh ~/.config/polybar/launch.sh

